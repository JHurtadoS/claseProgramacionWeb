                    <CustomTextArea
                        label="Tipo de documento"
                        name="TipoDocumento"
                        className="xl:!w-[96%] textAreaHeight"
                    />

                    <CustomRadioGroup
                        classname="!w-[96%]"
                        options={[
                            { value: "mujer", label: "Mujer" },
                            { value: "hombre", label: "Hombre" },
                            { value: "otro", label: "Otro" },
                        ]}
