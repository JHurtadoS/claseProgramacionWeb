                    />

                    <CustomInput
                        type="number"
                        label="Tipo de documento"
                        name="TipoDocumento"
                        className="lg:!w-[45%] xl:!w-[31%]"
                    />
                    <CustomInput
                        type="number"
                        label="Tipo de documento"
